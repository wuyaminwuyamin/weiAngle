<!--pages/form/personInfo/personInfo.wxml-->
<view wx:if="{{type == 0}}">
 <input class="myName" id="name" value="{{user_name}}" bindinput="nameEdit" placeholder="请输入姓名" />
</view>
<view  wx:if="{{type == 1}}">
 <input class="myName" id="telephone" value="{{user_mobile}}" bindinput="nameEdit" placeholder="请输入电话" />
</view>
<view  wx:if="{{type == 2}}">
 <input class="myName" id="brand" value="{{user_brand}}" bindinput="nameEdit" placeholder="请输入品牌" />
</view>
<view  wx:if="{{type == 3}}">
 <input class="myName" id="company" value="{{user_company_name}}" bindinput="nameEdit" placeholder="请输入公司" />
</view>
<view  wx:if="{{type == 4}}">
 <input class="myName" id="career" value="{{user_career}}" bindinput="nameEdit" placeholder="请输入职位" />
</view>
<view  wx:if="{{type == 5}}">
 <input class="myName" id="email" value="{{user_email}}" bindinput="nameEdit" placeholder="请输入邮箱" />
</view>
<view class="btn" bindtap="save">保存</view>
 