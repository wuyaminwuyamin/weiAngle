/* pages/my/searchCompany/searchCompany.wxss */

.searchCompany {
  height: 112rpx;
  width: 100%;
  background: white;
  position: relative;
  padding-left: 32rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #999;
  line-height: 112rpx;
}

.searchSth {
  border: 1px solid #40587a;
  border-radius: 2px;
  width: 84rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #40587a;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 4;
}
.prompt{
  margin-bottom:48rpx;
}
.noLetOut {
  font-size: 22rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 22rpx;
  text-align: left;
}

.exclamation {
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  margin-right: 8rpx;
  margin-left: 32rpx;
}

.hasNo {
  font-size: 36rpx;
  color: #999;
  text-align: left;
  margin-top: 178px;
  margin-left: 97px;
}

.saveCompanyName {
  position: fixed;
  bottom: 0;
  background: #40587a;
  width: 376px;
  height: 44px;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 44px;
  text-align: center;

}

.result {
  background: #fff;
  border-radius: 4rpx;
  width: 343px;
  height: 112rpx;
  margin-bottom: 24rpx;
  margin-left:32rpx;
  margin-right:32rpx;
}

.content {
  font-size: 32rpx;
  color: #666;
  line-height: 112rpx;
  text-align: center;
}
.emptyBox{
  height:88rpx;
  width:100%;
}
.on{
  border:1rpx solid #40587a;
}