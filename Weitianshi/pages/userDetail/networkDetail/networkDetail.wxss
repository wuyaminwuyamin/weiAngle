/* pages/userDetail/userDetail.wxss */
@import "/pages/my/my/my.wxss";

.floatBtn {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.floatBtn button {
  width: 100%;
  justify-content: center;
  color: white;
  border-radius: 0;
  background: #40587a;
}

#mobileStyle {
  color: #009eff;
  text-decoration: underline;
}

.waitPerson {
  background: #f2f2f2;
  width: 100%;
  height: 98rpx;
}

.waitPersonBtn {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  padding-top: 34rpx;
  line-height: 30rpx;
  text-align: center;
  height: 98rpx;
}

.user_play_time {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #ccc;
  line-height: 20rpx;
  text-align: left;
  margin-bottom: 60rpx;
  margin-top: 16rpx;
}

.user_left .flex:first-child {
  align-items: flex-end;
  margin-bottom: 0;
}

/*推送项目  */

.addPerson {
  background: #2b405e;
  border: 0;
  width: 100%;
  height: 98rpx;
}

.pushProjectTo, .addPersonBtn {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  width: 50%;
}

.addPersonBox, .pushProjectBox {
  margin: 30rpx 0;
  white-space: nowrap;
  margin-left: 110rpx;
}

.pushProjectBox {
  padding-right: 110rpx;
  border-right: 1rpx solid white;
}

.iconStyle {
  width: 28rpx;
  height: 24rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.pushPro {
  background: #40587a;
  width: 100%;
  height: 54rpx;
  padding-top: 34rpx;
  justify-content: center;
}

.pushProjectAfter {
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color:#ffffff;
}
